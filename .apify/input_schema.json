{
  "schemaVersion": 1,
  "title": "Competitor Pricing Monitor",
  "type": "object",
  "properties": {
    "items": {
      "type": "array",
      "title": "Products to monitor",
      "items": {
        "type": "object",
        "properties": {
          "url": {
            "type": "string",
